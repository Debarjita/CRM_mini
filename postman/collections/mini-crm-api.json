      ]
    },
    {
      "name": "Campaign Management",
      "item": [
        {
          "name": "Preview Audience Size",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/customers/preview?rules={\"operator\":\"AND\",\"conditions\":[{\"field\":\"totalSpends\",\"operator\":\">\",\"value\":\"10000\"}]}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers", "preview"],
              "query": [
                {
                  "key": "rules",
                  "value": "{\"operator\":\"AND\",\"conditions\":[{\"field\":\"totalSpends\",\"operator\":\">\",\"value\":\"10000\"}]}"
                }
              ]
            }
          }
        },
        {
          "name": "Create Campaign",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"High Value Customer Appreciation\",\n  \"segmentRules\": {\n    \"operator\": \"AND\",\n    \"conditions\": [\n      {\n        \"field\": \"totalSpends\",\n        \"operator\": \">\",\n        \"value\": \"10000\"\n      },\n      {\n        \"field\": \"visits\",\n        \"operator\": \">=\",\n        \"value\": \"3\"\n      }\n    ]\n  },\n  \"message\": \"Hi {name}, thank you for being our valued customer! Enjoy 20% off your next purchase with code VALUED20.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/campaigns",
              "host": ["{{baseUrl}}"],
              "path": ["api", "campaigns"]
            }
          }
        },
        {
          "name": "Get All Campaigns",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/campaigns",
              "host": ["{{baseUrl}}"],
              "path": ["api", "campaigns"]
            }
          }
        },
        {
          "name": "Get Campaign Real-time Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/campaigns/{{campaignId}}/realtime",
              "host": ["{{baseUrl}}"],
              "path": ["api", "campaigns", "{{campaignId}}", "realtime"]
            }
          }
        }
      ]
    },
