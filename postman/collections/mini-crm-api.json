  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate timestamp for requests",
          "pm.globals.set('timestamp', new Date().toISOString());",
          "",
          "// Generate random delivery ID for testing",
          "pm.globals.set('deliveryId', 'del_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9));"
        ]
      }
    }
  ]
